{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 21,
    "patch": 0
  },

  "configurePresets": [
    {
      "name": "mingw-release",
      "displayName": "MinGW x64 Release (Ninja + vcpkg)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build-mingw-release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/install-mingw-release",
        "CMAKE_TOOLCHAIN_FILE": "C:/vcpkg/scripts/buildsystems/vcpkg.cmake",
        "VCPKG_TARGET_TRIPLET": "x64-mingw-static",
        "VCPKG_FEATURE_FLAGS": "manifests",
        "BUILD_SHARED_LIBS": "OFF"
      },
      "environment": {
        "CC": "gcc",
        "CXX": "g++"
      }
    },
    {
      "name": "mingw-debug",
      "displayName": "MinGW x64 Debug (Ninja + vcpkg)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build-mingw-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/install-mingw-debug",
        "CMAKE_TOOLCHAIN_FILE": "C:/vcpkg/scripts/buildsystems/vcpkg.cmake",
        "VCPKG_TARGET_TRIPLET": "x64-mingw-static",
        "VCPKG_FEATURE_FLAGS": "manifests",
        "BUILD_SHARED_LIBS": "OFF"
      },
      "environment": {
        "CC": "gcc",
        "CXX": "g++"
      }
    }
  ],

  "buildPresets": [
    {
      "name": "mingw-release",
      "configurePreset": "mingw-release"
    },
    {
      "name": "mingw-release-install",
      "configurePreset": "mingw-release",
      "targets": [ "install" ]
    },
    {
      "name": "mingw-debug",
      "configurePreset": "mingw-debug"
    },
    {
      "name": "mingw-debug-install",
      "configurePreset": "mingw-debug",
      "targets": [ "install" ]
    }
  ]
}
